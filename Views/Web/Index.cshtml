@model List<Portfolio.Models.WebProject>

@{
    ViewData["Title"] = "Web Projeleri";
    // Bu değişkenler stil bloğunda kullanılacaktır
    var mainColor = "#762251";
    var textColor = "#333";
    var secondaryText = "#6c757d";
    var cardBg = "#ffffff";
}

<style>
    /* ------------------------------------------------------------------- */
    /* Home sayfasındaki son estetik ve profesyonel stillerle tam uyum       */
    /* ------------------------------------------------------------------- */

    /* Ana Renk Tanımı (Gerektiğinde referans için) */
    :root {
        --main-color: #762251;
        --text-color: #333;
        --secondary-text: #6c757d;
        --card-bg: #ffffff;
    }

    /* 🔥 Minimal Başlık Çizgisi ve Font Stili */
    h2, h3 {
        font-family: 'Inter', sans-serif;
        color: var(--main-color);
        font-weight: 700;
        position: relative;
        padding-bottom: 15px;
        margin-bottom: 40px;
        text-align: center;
        letter-spacing: -0.5px;
    }

        h2::after, h3::after {
            content: "";
            width: 30px;
            height: 2px;
            background-color: var(--main-color);
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 1px;
        }

    /* 🔥 Kart Stili (Geliştirilmiş Gölge ve Hover) */
    .card {
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 15px; /* Yumuşak köşeler */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08); /* Yumuşak gölge */
        height: 100%;
        overflow: hidden;
        background-color: var(--card-bg);
    }

        .card:hover {
            transform: translateY(-8px); /* Belirgin kalkış efekti */
            box-shadow: 0 15px 40px rgba(118, 34, 81, 0.35); /* Vurgulu gölge */
        }

    /* Video Çerçeve Köşeleri */
    .ratio iframe {
        border-radius: 15px 15px 0 0;
    }

    .card-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--main-color);
    }

    .card-text {
        font-size: 0.95rem;
        color: var(--secondary-text);
    }

    .card-body {
        padding: 1.5rem;
    }

    /* Giriş başlık stili */
    .lead {
        color: var(--secondary-text);
        font-size: 1.1rem;
    }
</style>

<div class="container py-5">

    <div class="text-center mb-5 pb-4">
        <h1 class="display-5 fw-bold" style="color: var(--text-color);">Web Tasarım ve Geliştirme Projeleri</h1>
        <p class="lead mx-auto" style="max-width: 800px;">
            Boğaziçi'nde aldığım derslerde öğrendiğim HTML, CSS, JavaScript ve ASP.NET Core gibi teknolojileri uygulayarak geliştirdiğim kullanıcı dostu web projelerinden örnekler.
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var project in Model)
        {
            <div class="col">
                <div class="card h-100 shadow border-0">
                    <div class="ratio ratio-16x9">
                        <iframe src="https://www.youtube.com/embed/@project.YouTubeId"
                                title="@project.Title"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@project.Title</h5>
                        <p class="card-text">@project.Description</p>
                        @* Eğer bir bağlantı (LinkPath) varsa buraya buton ekleyebilirsiniz *@
                        @* <a href="@project.LinkPath" class="btn btn-main mt-3">Projeyi Gör</a> *@
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* Bu sayfada JavaScript Lightbox kullanılmadığı için Scripts bölümü gerekmez. *@