<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Portfolio</title>

    <!-- Bootstrap & Fonts -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --main-color: #762251;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f9fc;
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--main-color) !important;
        }

        .nav-link {
            font-weight: 500;
            color: #333 !important;
        }

            .nav-link:hover {
                color: var(--main-color) !important;
            }

        h1, h2, h3, h4, h5, h6 {
            color: var(--main-color);
        }
    </style>
</head>
<body>
    <!-- 🔹 Responsive Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">Çağla Eraslan Portfolyo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Unity" asp-action="Index">Unity</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Web" asp-action="Index">Web Geliştirme</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Other" asp-action="Index">Diğer Projeler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Marketing" asp-action="Index">Marketing Portfolyo</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa içeriği -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
